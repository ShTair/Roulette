    private static string GetStateTitle(RouletteItemState state) => state switch
    {
        RouletteItemState.Locked => "ğŸ”’è¡¨ç¤º",
        RouletteItemState.Enabled => "è¡¨ç¤º",
        RouletteItemState.Disabled => "éè¡¨ç¤º",
